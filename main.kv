<CameraClick>:
    name:"CameraClick"
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: 'Capture'
            size_hint_y: None
            height: '48dp'
            on_press: root.capture()
        Button:
            text : "Back to first screen"
            size_hint_y: None
            height: '48dp'
            on_press: root.manager.current = "FirstScreen"
        Camera:
            id: camera
            resolution: (640, 480)
            allow_stretch: True
            keep_ratio: True
            play: True